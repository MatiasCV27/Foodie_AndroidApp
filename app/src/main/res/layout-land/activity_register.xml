<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/imgloginbacklandscape"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="30dp"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@mipmap/imglogofoodie" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="@font/rowdies_regular"
            android:gravity="center"
            android:text="FOODIE"
            android:textColor="@color/red800"
            android:textSize="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtUserRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit_text_semiredondo"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/blinker_regular"
            android:hint="Nombre de Usuario:"
            android:inputType="textPersonName"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtEmailRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit_text_semiredondo"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/blinker_regular"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtPasswordRegis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/back_edit_text_semiredondo"
            android:fontFamily="@font/blinker_regular"
            android:hint="ContraseÃ±a:"
            android:inputType="textPassword"
            android:minHeight="50dp"
            android:paddingStart="20dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rowdies_regular"
            android:text="REGISTRARSE"
            android:textColor="@color/white"
            android:textSize="17dp"
            app:backgroundTint="@color/red800"
            app:strokeColor="@color/red950"
            app:strokeWidth="2dp"
            app:cornerRadius="15dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelarRegi"
            android:layout_width="135dp"
            android:layout_height="58dp"
            android:layout_gravity="end"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/rowdies_regular"
            android:text="VOLVER"
            android:textColor="@color/red800"
            android:textSize="17dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/red800"
            app:strokeWidth="2dp"
            app:cornerRadius="15dp"/>

    </LinearLayout>

</LinearLayout>