<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".NavbarFragment.AccountFragment">
    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageView2"
        android:layout_width="188dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="5dp"
        android:src="@mipmap/imglogofoodie"
        app:shapeAppearanceOverlay="@style/CircularImageView"
        app:strokeColor="@color/red700"
        app:strokeWidth="2.5dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="@color/red700"
        android:clickable="true"
        android:contentDescription="TODO"
        android:src="@drawable/seleccion_foto" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="54dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="#FFF1F1"
        app:strokeWidth="2dp"
        app:strokeColor="#FF2222"
        android:padding="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHistorial"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:text="Historial de Pedidos"
            android:textColor="#081F32"
            android:textSize="18sp"
            android:textAlignment="textStart"
            app:cornerRadius="0dp"
            android:drawableLeft="@drawable/baseline_dashboard_customize_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            app:iconPadding="16dp"
            app:backgroundTint="#FFF1F1"
            app:elevation="2dp"
            app:strokeColor="#FFF1F1"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFaq"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="76dp"
            android:text="Preguntas Frecuentes"
            android:textColor="#081F32"
            android:textSize="18sp"
            android:textAlignment="textStart"
            app:cornerRadius="0dp"
            android:drawableLeft="@drawable/baseline_info_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            app:iconPadding="16dp"
            app:backgroundTint="#FFF1F1"
            app:elevation="2dp"
            app:strokeColor="#FFF1F1"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInfoUser"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="136dp"
            android:text="Información de Usuario"
            android:textColor="#081F32"
            android:textSize="18sp"
            android:textAlignment="textStart"
            app:cornerRadius="0dp"
            android:drawableLeft="@drawable/baseline_library_books_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            app:iconPadding="16dp"
            app:backgroundTint="#FFF1F1"
            app:elevation="2dp"
            app:strokeColor="#FFF1F1"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAyuda"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="196dp"
            android:text="Ayuda"
            android:textColor="#081F32"
            android:textSize="18sp"
            android:textAlignment="textStart"
            app:cornerRadius="0dp"
            android:drawableLeft="@drawable/baseline_question_mark_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            app:iconPadding="16dp"
            app:backgroundTint="#FFF1F1"
            app:elevation="2dp"
            app:strokeColor="#FFF1F1"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="256dp"
            android:layout_marginBottom="16dp"
            android:text="Cerrar sesión"
            android:textColor="#081F32"
            android:textSize="18sp"
            android:textAlignment="textStart"
            app:cornerRadius="0dp"
            android:drawableLeft="@drawable/baseline_close_24"
            android:drawableRight="@drawable/baseline_arrow_forward_ios_24"
            app:iconPadding="16dp"
            app:backgroundTint="#FFF1F1"
            app:elevation="2dp"
            app:strokeColor="#FFF1F1"
            app:strokeWidth="2dp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>