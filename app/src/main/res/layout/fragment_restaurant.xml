<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F1F0F0"
    tools:context=".NavbarFragment.RestaurantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/hsvContenedorCG"
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGMRest"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestTodo"
                    android:text="Todos"
                    style="@style/CustomChip"/>

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestEspecialidad"
                    style="@style/CustomChip"
                    android:text="Especialidad" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestPlatos"
                    style="@style/CustomChip"
                    android:text="Platos" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestSnacks"
                    style="@style/CustomChip"
                    android:text="Snacks" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestBebidas"
                    style="@style/CustomChip"
                    android:text="Bebidas" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRestPostres"
                    style="@style/CustomChip"
                    android:text="Postres" />

            </com.google.android.material.chip.ChipGroup>

        </HorizontalScrollView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:src="@mipmap/imgbarrahr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/outlinedTextField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:boxBackgroundColor="#6FFFFFFF"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp"
                app:hintTextColor="@color/black"
                app:shapeAppearance="@style/CorneredShape">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="11dp"
                    android:paddingBottom="11dp"
                    android:hint="¿Qué comida estás buscando?"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btnRestFind"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:contentDescription="Botón para bucar platillos"
                android:paddingLeft="8dp"
                app:icon="@mipmap/imgbuscar"
                app:iconSize="35dp"
                app:iconTint="@color/black" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Listado de..."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <FrameLayout
            android:id="@+id/frameMenuRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</FrameLayout>