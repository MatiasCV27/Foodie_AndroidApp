<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardPlatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="12dp"
        android:elevation="4dp">
    
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo_carrito2"
            android:orientation="horizontal">
        
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
        >
            <ImageView
                android:id="@+id/cardPlatoImagen"
                android:layout_width="115dp"
                android:layout_height="95dp"
                android:src="@mipmap/imglogofoodie"
                android:hint="imagen"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="6dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardPlatoNombre"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:hint="Nombre"
                    android:textStyle="bold"
                    android:textColor="@color/red950"

                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/cardPlatoDescripcion"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:hint="DescripciÃ³n"
                    android:textColor="#FF666666"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.23"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cardPlatoPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|start"
                    android:hint="Precio"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>