<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Foodie_app" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="CustomChip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16dp</item>
        <item name="chipStrokeColor">@color/red</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>

    <style name="CorneredShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">90dp</item>
    </style>

    <style name="CardHistorial">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">12dp</item>
        <item name="strokeColor">#FF2222</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:background">#FFF1F1</item>
    </style>

    <style name="Theme.Foodie_app" parent="Base.Theme.Foodie_app" />
    <style name="Theme.Foodie_app.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Foodie_app.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Foodie_app.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>